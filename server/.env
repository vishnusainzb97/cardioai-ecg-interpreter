# Server Environment Variables
PORT=3001
NODE_ENV=development

# MongoDB - Using local MongoDB
MONGODB_URI=mongodb://localhost:27017/cardioai

# JWT Authentication
JWT_SECRET=cardioai-super-secret-jwt-key-change-in-production-12345
JWT_EXPIRES_IN=7d

# Encryption (for HIPAA compliance) - 32 character key
ENCRYPTION_KEY=cardioai-encryption-key-32chars

# File Upload
MAX_FILE_SIZE=50mb
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,http://localhost:3001
